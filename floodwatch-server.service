[Unit]
Description=floodwatch-server

[Service]
ExecStart=/usr/bin/docker run --name=floodwatch-server --rm --read-only --env-file=/etc/floodwatch-server/floodwatch-server.env -v /usr/share/ca-certificates/:/etc/ssl/certs:ro -p 80:80 ocrnyc/floodwatch-server
ExecStop=/usr/bin/docker stop floodwatch-server
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target
